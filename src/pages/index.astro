---


<Layout title="Driving Bike 🚲">
	<main>
		<NavBar/>
		<Hero/>
		<Products client:load produtos={productosDestacados} titulo="PRODUCTOS DESTACADOS" />
		<ShippingPayment/>
		<Footer/>
	</main>
</Layout>